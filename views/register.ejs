<% include partials/header%>

    <div class="container">
        <br>
        <br>
        <br>

        <% errors.forEach(function(err) { %>
            <div class="alert alert-danger"><%= err.msg %></div>
        <% }) %>

        <div class="container">
            <center>
                <h2>REGISTER</h2>

                <br>
                <form class="form-signin" action="/register" method="POST">

                    <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" type="text" name="username" placeholder="Username" required style="width: 500px">
                    </div>
                    <br>

                    <div class="form-group">
                        <label>Set Password</label>
                        <input class="form-control" type="password" name="spassword" placeholder="Set Password" required style="width: 500px">
                    </div>
                    <br>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input class="form-control" type="password" name="cpassword" placeholder="Confirm Password" required style="width: 500px">
                    </div>

                    <button class="btn btn-lg btn-block" style="color: white; background-color: #232f3e; width: 500px">SIGN UP</button>

                </form>
            </center>
        </div>

    </div>

    <% include partials/footer%>