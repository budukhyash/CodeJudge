<% include partials/header%>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%=problem.title%></div>
    
    <form class="ui form"  action="/problems/<%=problem._id%>?_method=PUT" method ="POST">
        
        <div class="field">
            <label>Title</label>
            <input type="text" name="problem[title]" value="<%=problem.title%>">
        </div>
        
        <div class="field">
            <label>Problem Statement</label>
            <textarea name="problem[statement]"><%=problem.title%></textarea>
        </div>
        
        <div class="field">
        <label>Sample Test Input</label>
        <textarea name="problem[sampleInput]" ><%=problem.sampleInput%></textarea>
        </div>
        
         <div class="field">
        <label>Sample Test Output</label>
        <textarea name="problem[sampleOutput]"><%=problem.sampleOutput%></textarea>
        </div>
        
        <div class="field">
        <label>Actual Test Cases</label>
        <textarea name="problem[testcases]" ><%=problem.testcases%></textarea>
        </div>
        
        <div class="field">
        <label>Expected Output of the above testcases</label>
        <textarea name="problem[serverOutput]" ><%=problem.serverOutput%></textarea>
        </div>
        
        
        <input class="ui violet big basic button" type="submit">
    </form>


    </div>
    


<% include partials/footer%>