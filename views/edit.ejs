<% include partials/header%>
    <div class="container">
        <h3>Edit <%=problem.title%></h3>

        <form action="/problems/<%=problem._id%>?_method=PUT" method="POST">

            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="problem[title]" value="<%=problem.title%>">
            </div>

            <div class="form-group">
                <label>Problem Statement</label>
                <textarea class="form-control" name="problem[statement]" rows=5><%=problem.statement%></textarea>
            </div>

            <div class="form-group">
                <label>Sample Test Input</label>
                <textarea class="form-control" name="problem[sampleInput]" rows=3><%=problem.sampleInput%></textarea>
            </div>

            <div class="form-group">
                <label>Sample Test Output</label>
                <textarea class="form-control" name="problem[sampleOutput]" rows=3><%=problem.sampleOutput%></textarea>
            </div>

            <div class="form-group">
                <label>Actual Test Cases</label>
                <textarea class="form-control" name="problem[testcases]" rows=3><%=problem.testcases%></textarea>
            </div>

            <div class="form-group">
                <label>Expected Output of the above testcases</label>
                <textarea class="form-control" name="problem[serverOutput]" rows=3><%=problem.serverOutput%></textarea>
            </div>

            <button class="btn btn-info" type="submit">Submit</button>
        </form>


    </div>
    <br><br>

    <% include partials/footer%>