<% include partials/header%>
    <br>
    <br>

    <div class="container">
        <center>
            <h1>Code Judge</h1>
        </center>
        <br>
        <br>

        <form action="/problems/<%=problem._id%>/ide" method="POST">

            <div>
                <select name="lang" class="mdb-select md-form">
                    <option value=" ">Select Language</option>
                    <option value="c">C</option>
                    <option value="cpp">C++</option>
                    <option value="java">Java</option>
                    <option value="python2">Python</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea3">
                    <strong>Source Code</strong>
                </label>
                <textarea class="form-control" id="exampleFormControlTextarea3" rows="15" name="sourceCode" required="1" placeholer="Source"
                    wrap="soft"><%=source%></textarea>
            </div>


            <div>
                <input type="submit" class="btn btn-primary btn-md" value="Submit">
            </div>
            <br>
            <div class="form-group">
                <label for="exampleFormControlTextarea3">
                    <strong>Output</strong>
                </label>
                <textarea readonly class="form-control" id="exampleFormControlTextarea3" rows="3" name="output" wrap="soft"><%=output%></textarea>
            </div>

        </form>
        <a href="/problems">Back To Problems</a>

        
        

    </div>

    <% include partials/footer%>
