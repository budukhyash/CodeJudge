<% include partials/header%>    
    
    <% if(info && info.length > 0) { %>
        <div class="alert alert-info" role="alert">
            <%=info%>
        </div>
    <% } %>
    <div class="container">
        <br><br><br>


        <div class="container">
            <center>
                <h2>CODEJUDGE</h2>
            </center><br>


            <form class="form-signin" action="/login" method="POST">

                <center>
                    <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" type="text" name="username" placeholder="Username" required style="width: 500px">
                    </div><br>
                
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" type="password" name="password" placeholder="Password" required style="width: 500px">
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>

                    <button class="btn btn-lg btn-block" style="color:whitesmoke; background-color: #232f3e; width: 500px">LOGIN</button>
                </center>

            </form>
        </div>

    </div>

    <% include partials/footer%>