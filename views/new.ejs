<% include partials/header%>
    <div class="ui main text container segment">
        <div class="ui huge header">New Problem</div>
    
    <form class="ui form"  action="/problems" method ="POST">
        
        <div class="field">
            <label>Title</label>
            <input type="text" name="problem[title]" placeholder="title">
        </div>
        
        <div class="field">
            <label>Problem Statement</label>
            <textarea name="problem[statement]" placeholder="title"></textarea>
        </div>
        
        <div class="field">
        <label>Sample Test Input</label>
        <textarea name="problem[sampleInput]" placeholder="image"></textarea>
        </div>
        
         <div class="field">
        <label>Sample Test Output</label>
        <textarea name="problem[sampleOutput]" placeholder="image"></textarea>
        </div>
        
        <div class="field">
        <label>Actual Test Cases</label>
        <textarea name="problem[testcases]" placeholder="body"></textarea>
        </div>
        
        <div class="field">
        <label>Expected Output of the above testcases</label>
        <textarea name="problem[serverOutput]" placeholder="body"></textarea>
        </div>
        
        
        <input class="ui violet big basic button" type="submit">
    </form>


    </div>
    


<% include partials/footer%>